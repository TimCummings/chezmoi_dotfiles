# XDG paths
export XDG_DATA_HOME=${XDG_DATA_HOME:="$HOME/.local/share"}
export XDG_CACHE_HOME=${XDG_CACHE_HOME:="$HOME/.cache"}
export XDG_CONFIG_HOME=${XDG_CONFIG_HOME:="$HOME/.config"}

# You may need to manually set your language environment
export LANG=en_US.UTF-8

# Preferred editor
export EDITOR='nvim'

# default fzf options
export FZF_DEFAULT_OPTS='--height 40% --layout=reverse --border'

# nnn file manager
export NNN_TRASH=2

# asdf version manager
export ASDF_CONFIG_FILE="$XDG_CONFIG_HOME/asdfrc"
export ASDF_DIR="$XDG_DATA_HOME/asdf"
export ASDF_DATA_DIR="$XDG_DATA_HOME/asdf"

# Bundler for Ruby - honor XDG directories
export BUNDLE_USER_CONFIG="$XDG_CONFIG_HOME/bundle"
export BUNDLE_USER_CACHE="$XDG_CACHE_HOME/bundle"
export BUNDLE_USER_PLUGIN="$XDG_DATA_HOME/bundle"

# set GOPATH, disable module-aware mode, and add Go to PATH
export GOPATH="$HOME/code_projects/go"
export GO111MODULE=off
# replace all occurrences - ${parameter//pattern/string}
GO_BIN="/usr/local/go/bin"
[[ ":$PATH:" == *":${GO_BIN}:"* ]] && PATH="${PATH//$GO_BIN:/}"
export PATH="$PATH:${GO_BIN}"

# ensure Rust Cargo bin directory is in PATH
# replace all occurrences - ${parameter//pattern/string}
CARGO_BIN="$XDG_DATA_HOME/asdf/installs/rust/stable/bin"
[[ ":$PATH:" == *":${CARGO_BIN}:"* ]] && PATH="${PATH//$CARGO_BIN:/}"
export PATH="$PATH:${CARGO_BIN}"

# less pager - no history
export LESSHISTFILE=-

# Make sure ~/.local.bin is in PATH
# if in $PATH, remove, regardless of if it is in the right place (at the front) or not.
# replace all occurrences - ${parameter//pattern/string}
LOCAL_BIN="${HOME}/.local/bin"
[[ ":$PATH:" == *":${LOCAL_BIN}:"* ]] && PATH="${PATH//$LOCAL_BIN:/}"
# add to front of $PATH
PATH="${LOCAL_BIN}:$PATH"
